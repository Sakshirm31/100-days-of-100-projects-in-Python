###Spiral cirle###

import turtle
from turtle import Turtle,Screen
import random

turtle.colormode(255)
timmy=Turtle()
timmy.shape("turtle")

def random_color():
    r=random.randint(0,255)
    g = random.randint(0, 255)
    b = random.randint(0, 255)
    tuple=(r,g,b)
    return tuple


for n in range(0,361,5):
    timmy.color(random_color())

    timmy.circle(100)
    timmy.setheading(360-n)
    timmy.speed(0)
screen=Screen()
screen.exitonclick()

###The Hirst Painting###
import colorgram
import turtle
from turtle import Turtle,Screen
import random

turtle.colormode(255)
timmy=Turtle()
timmy.speed(0)
timmy.penup()
timmy.hideturtle()
def random_color():
    r=random.randint(0,255)
    g = random.randint(0, 255)
    b = random.randint(0, 255)
    tuple=(r,g,b)
    return tuple

timmy.setheading(225)
timmy.forward(350)
timmy.setheading(0)
no_of_dots=100
for n in range(1,no_of_dots+1):
    timmy.dot(20,random_color())
    timmy.forward(50)

    if n%10==0:
        timmy.setheading(90)
        timmy.forward(50)
        timmy.setheading(180)
        timmy.forward(500)
        timmy.setheading(0)


screen=Screen()
screen.exitonclick()

